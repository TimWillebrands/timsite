---
import Minimal from '../layouts/Minimal.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<Minimal title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<div class="container">
		<div class="left-column">
			<h1 transition:name="title">Tim Willebrands</h1>
			<h2>Pragmatic builder of maintainable systems.</h2>
			<p>
				I design and ship robust, developer-friendly platforms. Minimal overhead. Clean abstractions.
				Systems that scale with the team.
			</p>
		</div>
		<div class="right-column">
			<nav class="navigation">
				<a href="/work" class="cta">View Work</a>
				<a href="/writing" class="cta">Read Writing</a>
			</nav>
			<section aria-labelledby="featured">
				<h3 id="featured">Featured</h3>
				<ul>
					<li>
						<a href="/work/auxin">Auxin — Federated GraphQL Gateway</a>
					</li>
					<li>
						<a href="/work/proompting-party">proompting.party — Live demo infrastructure</a>
					</li>
					<li>
						<a href="/work/ecommerce-migration">Automating a 10,000‑item e‑commerce migration</a>
					</li>
				</ul>
			</section>
		</div>
	</div>
	<style>
		.container {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 4em;
			max-width: 1200px;
			margin: 0 auto;
			padding: 4em 2em;
			min-height: 100vh;
			align-items: start;
		}
		
		.left-column h1 {
			font-size: 3.2em;
			margin: 0 0 0.25em 0;
		}
		
		.left-column h2 {
			font-size: 1.8em;
			font-weight: 600;
			margin: 0 0 1em 0;
		}
		
		.left-column p {
			font-size: 1.1em;
			line-height: 1.7;
			margin: 0;
		}
		
		.right-column {
			display: flex;
			flex-direction: column;
			gap: 2em;
		}
		
		.navigation {
			display: flex;
			flex-direction: column;
			gap: 1em;
		}
		
		.cta {
			display: block;
			padding: 0.8em 1.2em;
			border: var(--border-thick) solid rgb(var(--black));
			border-radius: var(--border-radius);
			text-decoration: none;
			color: rgb(var(--black));
			text-align: center;
			font-weight: 500;
			transition: background-color 0.2s;
		}
		
		.cta:hover {
			background-color: rgb(var(--gray-light));
		}
		
		.right-column h3 {
			font-size: 1.4em;
			margin: 0 0 0.75em 0;
		}
		
		.right-column ul {
			list-style: none;
			padding: 0;
			margin: 0;
			display: flex;
			flex-direction: column;
			gap: 1em;
		}
		
		.right-column li {
			border: var(--border-thick) solid rgb(var(--black));
			border-radius: var(--border-radius);
			padding: 1em;
			transition: background-color 0.2s;
		}
		
		.right-column li:hover {
			background-color: rgb(var(--gray-light));
		}
		
		.right-column li a {
			text-decoration: none;
			color: rgb(var(--black));
		}
		
		.right-column li a:hover {
			text-decoration: underline;
		}
		
		@media (max-width: 768px) {
			.container {
				grid-template-columns: 1fr;
				gap: 3em;
				padding: 2em 1.5em;
			}
		}
	</style>
</Minimal>
