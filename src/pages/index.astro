---
import Minimal from "../layouts/Minimal.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import Background from "../components/Background.astro";

const ctaClasses =
    "inline-block border-2 border-black rounded-xl py-4 px-10 text-center font-bold text-xl text-black no-underline transition-all duration-200";
const featuredLinkClasses =
    "block text-black no-underline transition-all duration-150 hover:opacity-60 group";
const socialLinkClasses =
    "text-black font-semibold text-xl underline decoration-2 underline-offset-4 hover:decoration-4 transition-all duration-200";
---

<Minimal title={SITE_TITLE} description={SITE_DESCRIPTION}>
    <div
        class="mx-auto flex flex-col min-h-screen max-w-[48rem] justify-center px-6 py-16 md:px-8"
    >
        <!-- Main Focus: Brand & About -->
        <div
            class="mb-12 text-center border-2 border-black rounded-xl p-10 md:p-12 bg-white/40 backdrop-blur-sm"
        >
            <header class="mb-10">
                <h1
                    transition:name="title"
                    transition:animate="slide"
                    class="mb-8 text-7xl leading-1 font-bold md:text-5xl"
                >
                    Tim Willebrands
                </h1>
                <h2 class="mb-3 text-xl leading-1 font-semibold md:text-lg">
                    Software Craftsman & Technical Leader
                </h2>
                <p class="mx-auto max-w-xl text-xl leading-relaxed font-medium">
                    I'm a builder at heart, driven by the quiet joy of taking a
                    complex, messy problem and distilling it down to a clean,
                    maintainable solution. I do my best work with a high degree
                    of autonomy, taking full ownership of a product from the
                    initial spark of an idea to its life in production.
                    <br /><br />
                    Whether it's code, a loaf of bread, or a game prototype with
                    friends, I believe in the craft of making things well. My goal
                    is to build software that is not just robust, but a pleasure
                    to use and a pleasure for other engineers to work on.
                </p>
            </header>

            <!-- Social Links -->
            <div class="mb-10 flex flex-wrap justify-center gap-5 items-center">
                <a
                    href="mailto:mail@timwillebrands.nl?subject=Let%27s%20build%20something%20together%21&body=Hi%20Tim%2C%0A%0AI%20love%20your%20approach%20to%20building%20systems%20and%20crafting%20things.%20I%27m%20reaching%20out%20because..."
                    class={socialLinkClasses}
                >
                    <svg
                        width="20"
                        height="20"
                        class="inline-block w-5 h-5 mr-2 -mt-1"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        <path
                            d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z"
                        ></path>
                        <path
                            d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z"
                        ></path>
                    </svg>
                    Email
                </a>
                <span class="text-gray-400 text-2xl">•</span>
                <a
                    href="https://www.linkedin.com/in/tim-willebrands-191b12a2"
                    class={socialLinkClasses}
                    target="_blank"
                    rel="noopener"
                >
                    <svg
                        width="20"
                        height="20"
                        class="inline-block w-5 h-5 mr-2 -mt-1"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        <path
                            d="M20.5 2h-17A1.5 1.5 0 002 3.5v17A1.5 1.5 0 003.5 22h17a1.5 1.5 0 001.5-1.5v-17A1.5 1.5 0 0020.5 2zM8 19H5v-9h3zM6.5 8.25A1.75 1.75 0 118.3 6.5a1.78 1.78 0 01-1.8 1.75zM19 19h-3v-4.74c0-1.42-.6-1.93-1.38-1.93A1.74 1.74 0 0013 14.19a.66.66 0 000 .14V19h-3v-9h2.9v1.3a3.11 3.11 0 012.7-1.4c1.55 0 3.36.86 3.36 3.66z"
                        ></path>
                    </svg>
                    LinkedIn
                </a>
                <span class="text-gray-400 text-[1.5rem]">•</span>
                <a
                    href="https://github.com/timwillebrands"
                    class={socialLinkClasses}
                    target="_blank"
                    rel="noopener"
                >
                    <svg
                        width="20"
                        height="20"
                        class="inline-block w-5 h-5 mr-2 -mt-1"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                            clip-rule="evenodd"></path>
                    </svg>
                    GitHub
                </a>
                <span class="text-gray-400 text-[1.5rem]">•</span>
                <a
                    href="https://bsky.app/profile/tim0theus.bsky.social"
                    class={socialLinkClasses}
                    target="_blank"
                    rel="noopener"
                >
                    <svg
                        width="20"
                        height="20"
                        class="inline-block w-5 h-5 mr-2 -mt-1"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        <path
                            d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                        ></path>
                    </svg>
                    Bluesky
                </a>
            </div>

            <!-- CTAs -->
            <nav class="flex flex-wrap justify-center gap-5">
                <a href="/work" class={ctaClasses}>View My Work</a>
                <a href="/writing" class={ctaClasses}>Read My Writing</a>
            </nav>
        </div>

        <!-- Subtle Featured Projects -->
        <section
            aria-labelledby="featured"
            class="mx-auto w-full max-w-[36rem] mt-8"
        >
            <h3
                id="featured"
                class="mb-6 text-center text-[1.3rem] font-semibold opacity-70"
            >
                Featured Projects
            </h3>
            <ul class="flex list-none flex-col gap-3 p-0">
                <li>
                    <a href="/work/auxin" class={featuredLinkClasses}>
                        <div class="text-lg font-bold">
                            Auxin <span class="font-normal opacity-60"
                                >→ Taming a Sprawling Data Ecosystem with a
                                Federated GraphQL Gateway</span
                            >
                        </div>
                    </a>
                </li>
                <li>
                    <a
                        href="/work/proompting-party"
                        class={featuredLinkClasses}
                    >
                        <div class="text-lg font-bold">
                            Proompting.party <span
                                class="font-normal opacity-60"
                                >→ Digital Psyches with Memory & Culture. In a
                                comfy XP style desktop-UI</span
                            >
                        </div>
                    </a>
                </li>
            </ul>
        </section>

        <Background startColor="#8af0e0" endColor="#c6dbff" />
    </div>
</Minimal>
